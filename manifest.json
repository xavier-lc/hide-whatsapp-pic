{
  "manifest_version": 3,
  "name": "Hide WhatsApp Profile Pictures",
  "version": "1.0.0",
  "description": "Hide profile pictures for specific WhatsApp contacts",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://web.whatsapp.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://web.whatsapp.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
